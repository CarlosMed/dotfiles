// -*- mode: jsonc -*-
{
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "spacing": 8, // Gaps between modules (4px)
  "margin": "4 10 0 10",
  "include": [
    "~/.config/waybar/modules/modules.jsonc",
    "~/.config/waybar/modules/group-modules.jsonc",
    "~/.config/waybar/modules/custom-modules.jsonc"
  ],
  "modules-left": [
    "hyprland/submap",
    "custom/media",
    "tray",
    "group/hardware"
  ],
  "modules-center": [
    // "sway/scratchpad",
    // "hyprland/window",
    "hyprland/workspaces",
  ],
  "modules-right": [
    "mpd",
    "group/controls",
    "group/time",
    "power-profiles-daemon",
    "keyboard-state",
    "sway/language",
    "battery#bat2",
    "group/power",
  ]
}
